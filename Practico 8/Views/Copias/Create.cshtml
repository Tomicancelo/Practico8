@model Practico_8.Models.Copia

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Copia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPelicula" class="control-label"></label>
                <select asp-for="IdPelicula" class ="form-control" asp-items="ViewBag.IdPelicula"></select>
            </div>
            <div class="form-group">
                <label asp-for="Deteriorada" class="control-label"></label>
                <input asp-for="Deteriorada" class="form-control" />
